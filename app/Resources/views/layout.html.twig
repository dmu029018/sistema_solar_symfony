<html lang={% block language %}CA-ca{% endblock %}>
    <head>
        <meta charset="UTF-8"/>
        <title>{% block title %}Título de la página{% endblock %}</title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        {% block stylesheets %}
            
            <link rel="stylesheet" type="text/css" href="{{asset("css/style-main.css")}}"/>
            <style>
                
            </style>
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <h1 class="navbar-text navbar-left">Sistema <small>Solar</small></h1>
                </div>
                <ul class="nav navbar-nav mr-auto navbar-right">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('planeta_index')}}">Planetes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('satelit_index')}}">Satèl·lits</a>
                    </li>
                </ul>
            </div>
        </nav>
        
        {% if notification is defined %}
            <div class="alert alert-info">
               {{notification}}
            </div>
        {% endif %}
        
        
        {% if errors is defined %}
            {% for error in errors %}
                <div class="alert alert-danger">
                    {{error.message}}
                </div>
            {% endfor %}
        {% endif %}
        
        
        <div class="container" id="main-container">
            {% block body %}
            {% endblock %}
        </div>
        
        {% block javascript %}
            <script
			  src="https://code.jquery.com/jquery-3.2.1.min.js"
			  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
			  crossorigin="anonymous"></script>
            <script src="{{ asset('js/script.js') }}"></script>
        {% endblock %}
        
    </body>
</html>
