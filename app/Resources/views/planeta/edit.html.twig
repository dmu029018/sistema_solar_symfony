{% extends 'form-template.html.twig' %}

{% set page_title = 'Editar planeta: ' ~ planeta.nom %}
{% set entity = 'planeta' %}
{% set form = edit_form %}

{% block form %}
    <div class="well">
        <div class="form-group">
            {{ form_label(form.distancia) }}
            {{ form_widget(form.distancia) }}
        </div>
        <div class="form-group">
            {{ form_label(form.periode) }}
            {{ form_widget(form.periode) }}
        </div>
        <div class="form-group">
            {{ form_label(form.diametre) }}
            {{ form_widget(form.diametre) }}
        </div>
        <div class="form-group">
            {{ form_label(form.situacio) }}
            {{ form_widget(form.situacio) }}
        </div>
        <div class="form-group">
            {{ form_label(form.tipus) }}
            {{ form_widget(form.tipus) }}
        </div>
    </div>

{% endblock %}
